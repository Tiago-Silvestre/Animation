<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script type="module">
    import * as THREE from 'https://threejs.org/build/three.module.js';

    const scene = new THREE.Scene();
    const camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
    const renderer = new THREE.WebGLRenderer();
    renderer.setSize(window.innerWidth, window.innerHeight);
    document.body.appendChild(renderer.domElement);

    const geometry = new THREE.SphereGeometry(0.5, 32, 32);

    const particles = [];
    const particleCount = 100;

    for (let i = 0; i < particleCount; i++) {
      const material = new THREE.MeshBasicMaterial({ color: Math.random() * 0xffffff });
      const particle = new THREE.Mesh(geometry, material);
      particle.position.set(Math.random() - 0.5, Math.random() - 0.5, Math.random() - 0.5).normalize().multiplyScalar(20);
      particles.push(particle);
      scene.add(particle);
    }

    camera.position.z = 50;

    const convergeAndExplode = () => {
      converge();
      setTimeout(explode, 3000); // Explode after 3 seconds
    };

    const converge = () => {
      particles.forEach(particle => {
        const target = new THREE.Vector3();
        particle.userData.target = target;
      });
    };

    const explode = () => {
      particles.forEach(particle => {
        const target = new THREE.Vector3(
          (Math.random() - 0.5) * 100,
          (Math.random() - 0.5) * 100,
          (Math.random() - 0.5) * 100
        );
        particle.userData.target = target;
      });
    };

    const animate = function () {
      requestAnimationFrame(animate);

      particles.forEach(particle => {
        if (particle.userData.target) {
          particle.position.lerp(particle.userData.target, 0.05);
        }
      });

      renderer.render(scene, camera);
    };

    setInterval(convergeAndExplode, 6000); // Repeat every 6 seconds

    animate();
  </script>
</head>
<body style="margin: 0; overflow: hidden;">
</body>
</html>
